{
  "name": "bot",
  "version": "1.0.0",
  "main": "build/src/index.js",
  "license": "MIT",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.17",
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.11.2",
    "chai": "^4.3.4",
    "gts": "^3.1.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fmt": "gts fix",
    "prepare": "yarn run compile",
    "pretest": "tsc --noEmit",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register test/**/*.spec.ts",
    "coverage": "nyc yarn test",
    "posttest": "yarn run lint",
    "start:dev": "nodemon",
    "start:prod": "node ."
  },
  "dependencies": {
    "discord.js-light": "^3.5.9",
    "dotenv": "^8.2.0",
    "pathogen": "link:./build/lib",
    "postgres": "2.0.0-beta.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "exclude": [
      "test/",
      "build/",
      "src/",
      "coverage/",
      "lib/**/index.ts",
      ".prettierrc.js"
    ]
  }
}
